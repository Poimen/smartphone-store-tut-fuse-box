{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "noLib": false,
    "outDir": "dist/",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "router/*": ["src/router/*"],
      "pages/*": ["src/pages/*"],
      "store/*": ["src/store/*"]
    },
    "inlineSources": true,
    "importHelpers": true
  }
}
